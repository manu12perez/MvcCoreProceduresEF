@model TrabajadoresModel

@{
    List<string> oficios = ViewData["OFICIOS"] as List<string>;
}

@{
    ViewData["Title"] = "Index";
}

<h1>View Trabajadores</h1>

<form method="post">
    <label>Seleccione oficio</label>
    <select name="oficio" class="form-control">
        @foreach(string oficio in oficios){
            <option value="@oficio">@oficio</option>
        }
    </select>
    <br />
    <button class="btn btn-outline-danger">
        Buscar trabajadores
    </button>
</form>
<hr />
<ul class="list-group">
    <li class="list-group-item">
        <strong>Personas:</strong> @Model.Personas
    </li>
    <li class="list-group-item">
        <strong>Media salarial:</strong> @Model.MediaSalarial
    </li>
    <li class="list-group-item">
        <strong>Suma salarial:</strong> @Model.SumaSalarial
    </li>
</ul>
<hr />
@* <p>
    <a asp-action="Create"
       class="btn btn-outline-success">Create New</a>
</p> *@
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id Trabajador</th>
            <th>Apellido</th>
            <th>Oficio</th>
            <th>Salario</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Trabajadores) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdTrabajador)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Oficio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salario)
            </td>
            <td>
            </td>
        </tr>
}
    </tbody>
</table>
